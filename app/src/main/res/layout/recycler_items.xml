<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tv_coment"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/rect_border_white"
        android:fontFamily="@font/jua"
        android:text="우주 전쟁 이미지"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_dreamImg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rect_border_white"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_coment"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rect_border_white"
        android:fontFamily="@font/jua"
        android:text="  🖌 AI 화가   "
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/img_dreamImg"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/rect_border_white"
        android:fontFamily="@font/jua"
        android:text="  You 🧒   "
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_coment"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_store"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:background="@color/white"
        android:drawableRight="@drawable/baseline_download_24"
        android:fontFamily="@font/jua"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="앨범에 저장"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_dreamImg"
        app:layout_constraintTop_toBottomOf="@+id/img_dreamImg" />

</androidx.constraintlayout.widget.ConstraintLayout>